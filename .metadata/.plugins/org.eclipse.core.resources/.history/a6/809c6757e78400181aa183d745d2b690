package dataprovider;

import java.util.Properties;

public class ConfigFile {
	
	public Properties prop;
	public final String propfilepath ="config//configure.properties";
	
	public String getDP()
	{
		String dp=prop.getProperty("DriverPath");
		return dp;
	}
	
	public long getWait()
	{
		String wait=prop.getProperty("implicitlyWait");
		return 0;
		}
	
	public String url()
	{
		String urlo=prop.getProperty("url");
		return propfilepath;
	}
	
	public String user() {
		String user1=prop.getProperty("username");
		return user1;
	}
	public String pswd() {
		String pass=prop.getProperty("password");
		return pass;
	}	

}
